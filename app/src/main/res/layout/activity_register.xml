<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5252"
    tools:context=".Register">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/user_logo"
        android:drawablePadding="2dp"
        android:hint="@string/name_register"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="2dp"
        android:hint="Email Address"
        android:layout_below="@id/etName"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/phn_icon"
        android:drawablePadding="2dp"
        android:hint="Mobile Number(10 digits)"
        android:layout_margin="10dp"
        android:layout_below="@id/etEmail"
        android:background="#ffffff"
        android:inputType="phone"
       />
    <EditText
        android:id="@+id/etDelivery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/delivery_icon"
        android:drawablePadding="2dp"
        android:hint="Delivery Address"
        android:layout_below="@id/etMobile"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:inputType="textPostalAddress"
        />
    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/pass_icon"
        android:drawablePadding="2dp"
        android:hint="Password(Min. 4 characters)"
        android:layout_below="@id/etDelivery"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/pass_icon"
        android:drawablePadding="2dp"
        android:hint="Confirm Password"
        android:layout_below="@id/etPass"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@id/etConfirmPass"
        android:layout_margin="10dp"/>


</RelativeLayout>